{% include 'ultimate-settings' %}

{{ 'ultimate-brands.css' | asset_url | stylesheet_tag }}
{% if section.settings.autoPlay %}
<script src="{{ 'ultimate-sliderv2.js' | asset_url }}" defer="defer"></script>
{% assign sliderTag = 'ultimate-slider-v2' %}
{%- else -%}
<script src="{{ 'ultimate-sliderv2-without-autoplay.js' | asset_url }}" defer="defer"></script>
{% assign sliderTag = 'ultimate-slider-v2-without-autoplay' %}
{%- endif -%}

<style>
  #shopify-section-{{ section.id }} .ultimate-slider-v2 .ultimate-slider-v2-list:not(.swiper-initialized) .ultimate-slider-v2-item {
    width: calc(100% / {{ section.settings.desktopColumns }});
    flex: 0 0 calc(100% / {{ section.settings.desktopColumns }});
  }
  
  @media (min-width: {{ minTabletSize }}px) and (max-width: {{ maxTabletSize }}px) {
    #shopify-section-{{ section.id }} .ultimate-slider-v2 .ultimate-slider-v2-list:not(.swiper-initialized) .ultimate-slider-v2-item {
      width: calc(100% / {{ section.settings.tabletColumns }});
      flex: 0 0 calc(100% / {{ section.settings.tabletColumns }});
    }
  }
  
  @media (max-width: {{ maxMobileSize }}px) {
     #shopify-section-{{ section.id }} .ultimate-slider-v2-list{
    overflow:visible;
  }
    #shopify-section-{{ section.id }} .ultimate-slider-v2 .ultimate-slider-v2-list:not(.swiper-initialized) .ultimate-slider-v2-item {
      width: calc(100% / {{ section.settings.mobileColumns }});
      flex: 0 0 calc(100% / {{ section.settings.mobileColumns }});
    }
  }

  {%- if section.settings.css != blank -%}
  {{ section.settings.css }}
  {% endif %}
</style>
<div class="{{ section.settings.reviewaddclass }} video-slider-with-popup">
<div class="slider-haeader">
  <div class="slider-subheading">
      {%- if section.settings.subheading != blank -%}{{ section.settings.subheading }}{%- endif -%}
  </div>
  <div class="slider-heading">
     <span class="animation-heading">{%- if section.settings.animheading != blank -%}{{ section.settings.animheading }}{%- endif -%}</span> <span>{%- if section.settings.heading != blank -%}{{ section.settings.heading }}{%- endif -%}</span>
  </div>
</div>
<{{sliderTag}} class="ultimate-sections ultimate-slider-v2 ultimate-brands{% if section.settings.auto_hide_arrow %} ultimate-slider-v2-auto-hide-arrow{% endif %}{% if section.settings.smoothAutoPlay %} ultimate-slider-v2-hide-arrow{% endif %} {{section.settings.class}}" data-max-mobile-size="{{maxMobileSize}}" data-min-tablet-size="{{minTabletSize}}" data-max-tablet-size="{{maxTabletSize}}" data-min-desktop-size="{{minDesktopSize}}" data-columns="{{section.settings.desktopColumns}}" data-medium-columns="{{section.settings.tabletColumns}}" data-small-columns="{{section.settings.mobileColumns}}"{% if section.settings.autoPlay %} data-auto-play="true"{% if section.settings.smoothAutoPlay %} data-smooth-auto-play="true"{% endif %}{% endif %}
  data-next-arrow='.ultimate-slider-v2-next'
  data-prev-arrow='.ultimate-slider-v2-prev'
>
  <div class="ultimate-brands-list-container swiper ultimate-slider-v2-list swiper">
    <div class="swiper-wrapper ultimate-brands-list">
      {%- for block in section.blocks -%}
        <div class="swiper-slide ultimate-slider-v2-item ultimate-brands-item" data-video="video{{ forloop.index }}">
          <a  href="#!" class="ultimate-brands-link" href="{{ block.settings.link }}" aria-label="{{ block.settings.image.alt | escape }}">
             {% if block.settings.image != blank %}
                 <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt | escape }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}">
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
             <span class="only_hide">
               {{ block.settings.video | media_tag: autoplay: false}}
             </span>
            <div class="display_flex">
              <span>
                <!-- {% render 'titk-tok-icon2' %} -->
                {% if block.settings.tiktok_insta != blank %}
                   <img style="height:60px; width:60px; border-radius:0px;" src="{{ block.settings.tiktok_insta | img_url: 'master' }}" alt="{{ block.settings.tiktok_insta.alt | escape }}" width="60" height="60">
                {% endif %}
                {% if block.settings.tiktok_insta == blank %}
                  {% render 'titk-tok-icon2' %}
                {% endif %}
                </span>
              <span class="d__flex">  <span> {% render 'tik-tok-play' %}</span> &nbsp; {{ block.settings.views }}</span>
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
  <div class='ultimate-slider-v2-arrow ultimate-slider-v2-next'>
    <span>{% render 'video-slider-r-arrow' %}</span>
  </div>
  <div class='ultimate-slider-v2-arrow ultimate-slider-v2-prev'>
    
    <span>{% render 'video-slider-l-arrow' %}</span>
  </div>
</{{sliderTag}}>


  <div id="video-popup" class="popup">
    <div class="popup-content">
        <span class="close-btn">&times;</span>
        <div class="slider-container">
            <video id="popup-video" controls playsinline="true" autoplay="autoplay" loop="loop" >
                <source src="" type="video/mp4">
            </video>
        </div>
    </div>
  </div>
</div>
  


  <style>
.video-slider-with-popup .ultimate-slider-v2 .ultimate-slider-v2-prev:after, .video-slider-with-popup .ultimate-slider-v2 .ultimate-slider-v2-next:after{
  content:unset;
}
      .ultimate-slider-v2 .ultimate-slider-v2-arrow:hover {
      transform: translateY(-50%) scale(1);
  }
 .video-slider-with-popup .ultimate-slider-v2-prev span svg, .video-slider-with-popup .ultimate-slider-v2-next span svg {
    height: 15px;
    width: auto;
}
  .video-slider-with-popup .ultimate-slider-v2-prev span, .video-slider-with-popup .ultimate-slider-v2-next span {
      height: 40px;
      width: 40px;
      text-align: center;
      line-height: 26px;
      display: flex;
      border-radius: 3px;
      opacity: 1;
      background: #171717;
      border: 1px solid #FFFFFF;
      border-radius:7px;
      align-items: center;
      justify-content: center;
  }
    .video-slider-with-popup .d__flex{
     display: flex;
      align-content: center;
    align-items: center;
    }
   .video-slider-with-popup .ultimate-slider-v2 .ultimate-slider-v2-arrow{
     z-index:1;
   } 
.video-slider-with-popup .display_flex {
    display: flex;
    justify-content: space-between;
    gap: 0;
    position: absolute;
    width: 100%;
    padding-right: 20px;
    bottom: 0;
    background: rgb(99,99,99);
    background: linear-gradient(90deg, rgba(99,99,99,0.23) 0%, rgba(0,0,0,1) 100%);
    backdrop-filter: blur(1px);
    min-height: 60px;
    align-content: center;
    align-items: center;
}
.video-slider-with-popup .ultimate-brands .ultimate-brands-item, .video-slider-with-popup .ultimate-brands .ultimate-brands-link {
    border-radius: 20px;
    overflow: hidden;
}
.video-slider-with-popup .display_flex span {
    color: #fff;
    font-family: Poppins;
    font-size: 17px;
    font-weight: 600;
    line-height: 25.5px;
    text-align: center;
}
.video-slider-with-popup .only_hide{
  display:none;
}
.video-slider-with-popup .popup {
    display: none;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.7);
}
.video-slider-with-popup .popup-content {
    position: relative;
    margin: auto;
    padding: 20px;
    width: auto;
    max-width: 800px;
}
.video-slider-with-popup .slider-container {
    text-align: center;
}
.video-slider-with-popup .close-btn {
    position: absolute;
    right: 20px;
    font-size: 30px;
    cursor: pointer;
    color: white;
    background: #000;
    z-index: 999;
    border-radius: 0 20px 0 20px;
    border: 2px solid #fff;
    width: 50px;
    height: 50px;
    line-height: 40px;
    text-align: center;
}
.video-slider-with-popup .ultimate-brands .ultimate-brands-link{
  position:relative;
   overflow:hidden;
}
.video-slider-with-popup #popup-video {
    width: auto;
  border-radius:20px;
   object-fit: cover;
     border: 2px solid #fff;
  max-height:80vh;
      height: auto;
}
@media(max-width:767px){
  .video-slider-with-popup .ultimate-slider-v2-prev span, .video-slider-with-popup .ultimate-slider-v2-next span {
      height: 30px;
      width: 30px;
  }
      .video-slider-with-popup .ultimate-slider-v2-prev span {
       margin-left: 13px;
    }
    .video-slider-with-popup .ultimate-slider-v2-next span{
       margin-right: 13px;
    }
  .video-slider-with-popup .ultimate-slider-v2-prev span, .video-slider-with-popup .ultimate-slider-v2-next span{
    display:flex;
  }
.video-slider-with-popup .slider-haeader .slider-subheading {
    text-align: center;
    color: #131313;
    /* font-family: Owners; */
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 120%;
    letter-spacing: 3.5px;
    text-transform: uppercase;
    margin-bottom: 10px;
}
.video-slider-with-popup .slider-haeader .slider-heading {
    text-align: center;
    font-family: Poppins;
    font-size: 30px;
    font-style: normal;
    font-weight: 700;
    line-height: 38px;
    max-width: 300px;
    margin: auto;
}
      .viewrssection .ultimate-brands-item .ultimate-brands-link img {
    height: 550px;
    width: 100%;
}
     .video-slider-with-popup .ultimate-brands .ultimate-brands-item, .video-slider-with-popup .ultimate-brands .ultimate-brands-link {
    border-radius: 20px;
    overflow: hidden;
    min-width: 250px;
    display: flex;
    width: 100%;
}
    }
  </style>

