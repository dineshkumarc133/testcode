<div class="featured-products-section">
  {% if section.settings.title != blank %}
    <h2>{{ section.settings.title }}</h2>
  {% endif %}

  <div class="products-grid">
    {% for product in section.settings.products %}
      {% assign p = all_products[product] %}
      {% if p %}
        <div class="product-card">
          <a href="{{ p.url }}">
            <img src="{{ p.featured_image | img_url: 'medium' }}" alt="{{ p.title }}">
            <h3>{{ p.title }}</h3>
            {% if p.compare_at_price > p.price %}
              <span class="price"><s>{{ p.compare_at_price | money }}</s> {{ p.price | money }}</span>
            {% else %}
              <span class="price">{{ p.price | money }}</span>
            {% endif %}
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

